    function Guardar() {
        var c = { id: $("#id").val(), nombre: $("#nombre").val(), descripcion: $("#descripcion").val() };
        console.log(c);
        $.ajax({
            url: '@Url.Action("Guardar", "TipoProrroga")',
            type: 'POST',
            contentType: 'application/json',
            dataType: 'json',
            data: JSON.stringify(c),
            success: function (s) {
                switch (s.Tipo) {
                    case 1:
                        Toast("success", s.Msj);
                        $("#modalTipos").modal('hide');
                        Limpiar();
                        Actualizar();
                        break;
                    case 2:
                        Toast("warning", s.Msj);
                        break;
                    case 3:
                        Toast("error", s.Msj);
                        break;
                };
            }
        });
    }

    function Editar(id)
    {
        $.getJSON('@Url.Action("Editar", "TipoProrroga")', { id: id }, function (o) {
            $("#id").val(o.id);
            $("#nombre").val(o.nombre);
            $("#descripcion").val(o.descripcion);
        });
    }




